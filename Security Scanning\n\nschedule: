name: Security Scanning\n\nschedule:\n  - cron: '0 0 * * *'  # This runs every day at midnight UTC\n\njobs:\n  codeql:\n    runs-on: ubuntu-latest\n    steps:\n      - name: Checkout repository\n        uses: actions/checkout@v2\n      - name: Set up CodeQL\n        uses: github/codeql-action/setup@v1\n        with:\n          languages: 'javascript'  # Specify your language (javascript, python, etc.)\n      - name: Run CodeQL Analysis\n        uses: github/codeql-action/analyze@v1\n\n  trufflehog:\n    runs-on: ubuntu-latest\n    steps:\n      - name: Checkout repository\n        uses: actions/checkout@v2\n      - name: Scan for Secrets\n        run: |\n          git clone https://github.com/dxa4481/truffleHog.git\n          cd truffleHog\n          python3 truffleHog/truffleHog.py --regex --json . > trufflehog_report.json\n          echo "Secrets scanning completed, check trufflehog_report.json"\n
