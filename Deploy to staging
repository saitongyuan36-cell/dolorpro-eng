name: Deploy to Staging\n\n'on: [\n  workflow_dispatch: {\n    inputs: {\n      service: {\n        description: 'Select the service to deploy' ,\n        required: true,\n        options: [ 'backend', 'frontend', 'mobile', 'all' ]\n      }\n    }\n  }\n]\n\njobs:\n  deploy:\n    runs-on: ubuntu-latest\n    steps:\n      - name: Checkout code\n        uses: actions/checkout@v2\n      - name: Deploy Backend\n        if: ${{ github.event.inputs.service == 'backend' || github.event.inputs.service == 'all' }}\n        run: |\n          echo 'Deploying Backend...'\n      - name: Deploy Frontend\n        if: ${{ github.event.inputs.service == 'frontend' || github.event.inputs.service == 'all' }}\n        run: |\n          echo 'Deploying Frontend...'\n      - name: Deploy Mobile\n        if: ${{ github.event.inputs.service == 'mobile' || github.event.inputs.service == 'all' }}\n        run: |\n          echo 'Deploying Mobile...'\n
