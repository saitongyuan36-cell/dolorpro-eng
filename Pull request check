name: Pull Request Checks\n\non: pull_request:\n  types: [opened, edited, reopened]\n\njobs:\n  check_pr:\n    runs-on: ubuntu-latest\n    steps:\n      - name: Check Semantic PR Title\n        if: startsWith(github.event.pull_request.title, 'feat:') || startsWith(github.event.pull_request.title, 'fix:') || startsWith(github.event.pull_request.title, 'docs:')\n        run: echo 'Valid PR title.'\n      - name: Detect Conflicts\n        run: |\n          if [ ${GITHUB_REF} != 'refs/heads/main' ]; then\n            git fetch origin main;\n            git merge-base --is-ancestor ${{ github.event.pull_request.base.sha }} ${{ github.event.pull_request.head.sha }} || exit 1;\n          else\n            echo 'No conflicts detected.';\n          fi\n      - name: Link to Issue Check\n        run: |\n          if [[ ! ${GITHUB_EVENT_PULL_REQUEST_BODY} =~ #[1-9][0-9]* ]]; then\n            echo 'Pull request must link to an issue.';\n            exit 1;\n          else\n            echo 'Issue linked.';\n          fi\n
